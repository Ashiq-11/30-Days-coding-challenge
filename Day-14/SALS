class Solution(object):
    def splitArray(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        def can_split(max_sum):
            current_sum = 0
            parts = 1
            for num in nums:
                current_sum += num
                if current_sum > max_sum:
                    parts += 1
                    current_sum = num
                    if parts > k:
                        return False
            return True

        left, right = max(nums), sum(nums)
        while left < right:
            mid = (left + right) // 2
            if can_split(mid):
                right = mid
            else:
                left = mid + 1

        return left
